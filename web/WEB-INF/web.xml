<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    
    <!--index-->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    
    <!--filters-->
    <filter>
        <filter-name>LoginFilter</filter-name>
        <filter-class>com.login.util.LoginFilter</filter-class>
    </filter>
    <filter>
        <filter-name>PageFilter</filter-name>
        <filter-class>com.login.util.PageFilter</filter-class>
    </filter>
    <filter>
        <filter-name>NoCacheFilter</filter-name>
        <filter-class>com.login.util.NoCacheFilter</filter-class>
    </filter>
    
    <!--filter-mapping-->
    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <url-pattern>/home</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>PageFilter</filter-name>
        <url-pattern>/user_management</url-pattern>
        <url-pattern>/transfer</url-pattern>
        <url-pattern>/withdraw</url-pattern>
        <url-pattern>/deposit</url-pattern>
        <url-pattern>/statistic</url-pattern>
        <url-pattern>/LogoutServlet</url-pattern>
        <url-pattern>/add_user</url-pattern>
        <url-pattern>/UserFunctions</url-pattern>
        <!--<url-pattern>/reset_password</url-pattern>-->
    </filter-mapping>
    <filter-mapping>
        <filter-name>NoCacheFilter</filter-name>
        <url-pattern>/home</url-pattern>
        <url-pattern>/user_management</url-pattern>
        <url-pattern>/transfer</url-pattern>
        <url-pattern>/withdraw</url-pattern>
        <url-pattern>/deposit</url-pattern>
        <url-pattern>/statistic</url-pattern>
        <url-pattern>/LogoutServlet</url-pattern>
    </filter-mapping>
    
    <!--servlets-->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.login.connection.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DepositServlet</servlet-name>
        <servlet-class>com.login.connection.DepositServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>WithdrawServlet</servlet-name>
        <servlet-class>com.login.connection.WithdrawServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TransferServlet</servlet-name>
        <servlet-class>com.login.connection.TransferServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StatisticServlet</servlet-name>
        <servlet-class>com.login.connection.StatisticServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.login.connection.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserManagement</servlet-name>
        <servlet-class>com.login.connection.UserManagement</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Add_User</servlet-name>
        <servlet-class>com.login.connection.UserManagement</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserFunctions</servlet-name>
        <servlet-class>com.login.connection.UserFunctions</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PasswordServlet</servlet-name>
        <servlet-class>com.login.connection.PasswordServlet</servlet-class>
    </servlet>
    
    <!--servlet-mapping-->
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TransferServlet</servlet-name>
        <url-pattern>/transfer</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>WithdrawServlet</servlet-name>
        <url-pattern>/withdraw</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DepositServlet</servlet-name>
        <url-pattern>/deposit</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StatisticServlet</servlet-name>
        <url-pattern>/statistic</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/LogoutServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserManagement</servlet-name>
        <url-pattern>/user_management</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Add_User</servlet-name>
        <url-pattern>/add_user</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserFunctions</servlet-name>
        <url-pattern>/UserFunctions</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PasswordServlet</servlet-name>
        <url-pattern>/reset_password</url-pattern>
    </servlet-mapping>
    
    <session-config>
        <session-timeout>5</session-timeout>
    </session-config>
    <resource-ref>
        <description>DB Connection</description>
        <res-ref-name>jdbc/login2</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
</web-app>
